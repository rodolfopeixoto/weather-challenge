<div class="card" style="width: 28rem;">
  <div class="card-body">
    <h5 class="card-title"><%= weather.city  %></h5>
    <p class="card-text">

    <div class="container">
      <div class="row">
        <div class="col-sm">
          <%= I18n.t('.weather.pressure') %>:
        </div>
        <div class="col-sm">
          <%= weather.pressure %>hpa
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-sm">
          <%= I18n.t('.weather.humidity') %>:
        </div>
        <div class="col-sm">
          <%= weather.humidity %>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-sm">
          <%= I18n.t('.weather.min_temperature') %> Fahrenheit:
        </div>
        <div class="col-sm">
          <%= weather.min_temperature %> &ordm;F
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-sm">
          <%= I18n.t('.weather.min_temperature') %> Celsius:
        </div>
        <div class="col-sm">
          <%= weather.celsius_min_temperature %> &ordm;C
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-sm">
          <%= I18n.t('.weather.max_temperature') %> Fahrenheit:
        </div>
        <div class="col-sm">
          <%= weather.max_temperature %> &ordm;F
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-sm">
          <%= I18n.t('.weather.max_temperature') %> Celsius:
        </div>
        <div class="col-sm">
         <%= weather.celsius_max_temperature %>&ordm;C
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-sm">
          <%= I18n.t('.weather.wind_speed') %>:
        </div>
        <div class="col-sm">
         <%= weather.wind_speed %>mi/h
        </div>
      </div>
    </div>

    </p>
  </div>
</div>
