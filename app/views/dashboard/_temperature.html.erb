<% unless weather.is_a?(Hash) %>

<h1>Weather for <%= weather.city %></h1>

<h2><%= weather.temperature %> &ordm;F
| <%= weather.celsius_temperature %> &ordm;C</h2>

<table>
  <tbody>
    <tr>
      <td>Pressure</td>
      <td><%= weather.pressure %>hpa</td>
    </tr>
    <tr>
      <td>Humidity</td>
      <td><%= weather.humidity %>%</td>
    </tr>
    <tr>
      <td>Min Temperature</td>
      <td><%= weather.min_temperature %> &ordm;F | <%= weather.celsius_min_temperature %> &ordm;C</td>
    </tr>
    <tr>
      <td>Max Temperature</td>
      <td><%= weather.max_temperature %> &ordm;F | <%= weather.celsius_max_temperature %>&ordm;C</td>
    </tr>
    <tr>
      <td>Wind Speed</td>
      <td><%= weather.wind_speed %>mi/h</td>
    </tr>
  </tbody>
</table>

<% else %>
   <p><%= weather[:message] %></p>
<% end %>
